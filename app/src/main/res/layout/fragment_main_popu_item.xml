<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_white">

    <ImageView
        android:id="@+id/book_item_cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@drawable/cover_default" />

    <TextView
        android:id="@+id/book_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/book_item_cover"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/book_item_cover"
        android:text="爱上女总裁"
        android:textColor="@color/light_black"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/book_item_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/book_item_title"
        android:layout_below="@id/book_item_title"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/book_item_cover"
        android:text="少年追命狼，无意邂逅女总裁，并帮助女总裁破获各种千奇百怪的案件,并帮助女总裁破获各种千奇百怪的案件"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/common_h2"
        android:textSize="12dp" />


    <TextView
        android:id="@+id/book_item_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/book_item_title"
        android:layout_below="@id/book_item_des"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/book_item_cover"
        android:drawableLeft="@drawable/ic_book_review_like"
        android:drawablePadding="5dp"
        android:text="作者:和风沐雨"
        android:textColor="@color/common_h2"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/book_item_chapt_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/book_item_author"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/comm_tag"
        android:padding="3dp"
        android:text="共3308章节"
        android:textColor="@color/common_h2"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/book_item_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/book_item_author"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/book_item_chapt_total"
        android:background="@drawable/comm_tag"
        android:padding="3dp"
        android:text="都市生活"
        android:textColor="@color/common_h2"
        android:textSize="10dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        android:layout_alignParentBottom="true"
        android:background="@color/light_gray_split" />
</RelativeLayout>







